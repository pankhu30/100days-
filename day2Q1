#include <stdio.h>

int main() {
    int n=0,pos=0;
    printf("enter the size of the array ");
    scanf("%d",&n);
    int arr[n];
    for(int i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("enter the position at which the element is to be deleted ");
    scanf("%d",&pos);
     if (pos < 1 || pos > n) {
        printf("Invalid position\n");
        return 0;
    }
    for (int i = pos - 1; i < n - 1; i++) {
        arr[i] = arr[i + 1];
    }
    for (int i = 0; i < n - 1; i++) {
        printf("%d ", arr[i]);
    }
    
    return 0;
}
